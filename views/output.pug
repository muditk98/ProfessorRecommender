html
	head
		title="Professor Rating System"
		script(src="https://www.google.com/recaptcha/api.js")
		link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
		link(rel='stylesheet', type='text/css', href='/fonts/font-awesome-4.7.0/css/font-awesome.min.css')

	body
		#professor
			p #{prof.name} #{prof.school} 
			p  Overall Score: #{prof.overall.toFixed(2)} 
			p Difficulty: #{prof.difficulty.toFixed(2)}
		
		form#rateForm.contact2-form.validate-form(method='POST' action=post)
			select#course(name='course')
				each course in prof.courses
					option(value=course._id) #{course.cid}
			br
			label Overall:
			input(type='number' min='0' max='5' step='1' name="overall" id="overall")
			br
			label Difficulty:
			input(type='number' min='0' max='5' id="difficulty" name="difficulty")
			br
			textarea#comment(name="comment", cols="30", rows="10")
			br
			p !{captcha}
			button#formSubmitButton(type="submit") Rate
		table.ratings
			thead
				th Date
				th Course
				th Overall Score
				th Difficulty
				th Comments
			tbody
				each rating in ratings
					if rating.comment
						tr
							td= rating.date.toLocaleString()
							td= rating.course.cid
							td= rating.overall
							td= rating.difficulty
							td= rating.comment 


		script.
			function cb(token){
				console.log('token', token);
				var input = document.createElement('input');
				input.setAttribute('type', 'text');
				input.setAttribute('name', 'g-recaptcha-response');
				input.setAttribute('value', token);
				document.getElementById('rateForm').appendChild(input);
				//- document.getElementById('formSubmitButton').disabled = 'false'
				//- alert('asdf')
			}